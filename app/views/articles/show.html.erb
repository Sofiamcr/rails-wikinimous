<div class="container mt-5">
  <div class="show_title d-flex justify-content-left align-items-center mb-4">
    <h1><%= @article.title %></h1>
    <%= link_to edit_article_path do %><i class="fa-solid fa-pencil"></i><% end %>
    <%= link_to article_path,
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%>
        <i class="fa-solid fa-trash-can"> </i>
      <% end %>
  </div>
  <p><%= @article.content %></p>
</div>
